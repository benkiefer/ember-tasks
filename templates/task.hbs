{{input class="name" type="text" placeholder="name" value=name }}

<button class="submit" {{action "add"}}>Add</button>

<br/>

<table>
    {{#each task in controller}}
        <tr>
            <td class="name">{{task.name}}</td>
            <td>
                <button class="delete" {{action "remove" task}}>Delete</button>
            </td>
        </tr>
    {{/each}}
</table>